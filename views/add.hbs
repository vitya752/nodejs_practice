<h1>Добавить новый курс</h1>

{{#if error}}
<div class="alert alert-danger" role="alert">
    {{error}}
</div>
{{/if}}

<form action="/add" method="POST">
  <div class="form-group">
    <label for="nameCourse">Название курса</label>
    <input type="text" name="title" class="form-control" id="nameCourse" value="{{data.title}}" required>
  </div>
  <div class="form-group">
    <label for="priceCourse">Цена курса</label>
    <input type="number" name="price" min="1" class="form-control" id="priceCourse" value="{{data.price}}" required>
  </div>
  <div class="form-group">
    <label for="imgCourse">URL изображения</label>
    <input type="text" name="img" class="form-control" id="imgCourse" value="{{data.img}}" required>
  </div>
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button type="submit" class="btn btn-primary">Добавить курс</button>
</form>