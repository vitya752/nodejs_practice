<h1>Профиль</h1>

<div class="row pt-3">
    <div class="col-6">
        {{#if user.avatarURL}}
        <img 
            src="{{user.avatarURL}}" 
            alt="avatar-{{user.name}}" 
            class="avatar">
        {{else}}
        <p>Аватара нет...</p>
        {{/if}}
    </div>
    <div class="col-6">
        <form action="/profile" method="POST" enctype="multipart/form-data">
            <p>Ваш email: <strong>{{user.email}}</strong></p>
            <div class="form-group">
                <label for="login">Ваш логин</label>
                <input 
                    id="login"
                    type="text" 
                    name="login" 
                    class="form-control"
                    value="{{user.name}}" required>
            </div>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="validatedCustomFile" name="avatar" required>
                <label class="custom-file-label" for="validatedCustomFile">Выбрать новый аватар</label>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button class="mt-3 btn btn-primary" type="submit">Изменить</button>
        </form>
    </div>
</div>